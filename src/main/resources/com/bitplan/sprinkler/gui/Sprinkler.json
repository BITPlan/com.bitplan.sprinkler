						{
							"title": "latestSprinkleHour",
							"hint": "latest time to sprinkle e.g. 20:30",
							"format": "%s",
							"labelSize": 20,
							"fieldSize": 6
						},
						{
							"title": "debug",
							"hint": "display debugging information for the sprinkler controller",
